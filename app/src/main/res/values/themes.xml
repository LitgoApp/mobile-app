<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LitGo" parent="Theme.Material3.DayNight.NoActionBar"/>

    <style name="AppCompat" parent="Theme.AppCompat"/>

    <style name="LitGo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green</item>
    </style>

    <!-- Button styling -->
    <style name="LitGo.Button" parent="android:style/Widget.Button">
        <item name="android:elevation">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:buttonCornerRadius">10dp</item>
    </style>
    <style name="LitGo.Button.Green" parent="LitGo.Button">
        <item name="android:background">@color/green</item>
        <item name="backgroundTint">@color/green</item>
        <item name="textFillColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="LitGo.Button.Gray" parent="LitGo.Button">
        <item name="android:background">@color/gray</item>
        <item name="backgroundTint">@color/lighter_gray</item>
        <item name="textFillColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="LitGo.Button.White" parent="LitGo.Button">
        <item name="android:background">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="textFillColor">@color/green</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <!-- TextView styling -->
    <style name="LitGo.TextView" parent="LitGo"/>
    <style name="LitGo.TextView.Error" parent="LitGo.TextView">
        <item name="android:background">@color/lighter_red</item>
        <item name="android:textSize">@dimen/paragraph_text_size</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="LitGo.TextView.Label" parent="LitGo.TextView">
<!--        <item name="background">@drawable/rectangle_container</item>-->
        <item name="android:textAlignment">center</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textSize">@dimen/header_3_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
<!--    <style name="LitGo.TextView.Label.Red" parent="LitGo.TextView.Label">-->
<!--        <item name="android:backgroundTint">@color/lighter_red</item>-->
<!--        <item name="android:textColor">@color/dark_red</item>-->
<!--    </style>-->
<!--    <style name="LitGo.TextView.Label.Yellow" parent="LitGo.TextView.Label">-->
<!--        <item name="android:backgroundTint">@color/lightest_yellow</item>-->
<!--        <item name="android:textColor">@color/dark_yellow</item>-->
<!--    </style>-->
    <style name="LitGo.TextView.Title" parent="LitGo.TextView">
        <item name="android:textColor">@color/green</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
    <style name="LitGo.TextView.Title.Green" parent="LitGo.TextView.Title">
        <item name="android:textColor">@color/green</item>
    </style>
    <style name="LitGo.TextView.Title.White" parent="LitGo.TextView.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LitGo.TextView.Header1" parent="LitGo.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/header_1_text_size</item>
    </style>
    <style name="LitGo.TextView.Header2" parent="LitGo.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/header_2_text_size</item>
    </style>

    <style name="LitGo.TextView.Header3" parent="LitGo.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/header_3_text_size</item>
    </style>
    <style name="LitGo.TextView.Header3.Red" parent="LitGo.TextView.Header3">
        <item name="color">@color/dark_red</item>
    </style>
    <style name="LitGo.TextView.Header3.Yellow" parent="LitGo.TextView.Header3">
        <item name="color">@color/dark_yellow</item>
    </style>

    <style name="LitGo.TextView.Paragraph" parent="LitGo.TextView">
        <item name="android:textSize">@dimen/paragraph_text_size</item>
    </style>
    <style name="LitGo.TextView.Paragraph.Bold" parent="LitGo.TextView.Paragraph">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/custom_button_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

</resources>