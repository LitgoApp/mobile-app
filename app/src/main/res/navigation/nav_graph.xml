<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ReportsFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.litgo.ui.login.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_LoginFragment_to_UserProfileFragment"
            app:destination="@id/UserProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/UserProfileFragment"
        android:name="com.litgo.ui.profile.UserProfileFragment"
        tools:layout="@layout/fragment_user_profile">
    </fragment>

    <fragment
        android:id="@+id/ReportsFragment"
        android:name="com.litgo.ReportsFragment"
        tools:layout="@layout/fragment_rewards">
    </fragment>

    <fragment
        android:id="@+id/RewardsFragment"
        android:name="com.litgo.ui.RewardsFragment"
        tools:layout="@layout/fragment_rewards">
    </fragment>

</navigation>


