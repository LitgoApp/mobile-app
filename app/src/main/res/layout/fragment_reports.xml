<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/screen_margin"
    tools:context=".ReportsFragment"
    android:background="@color/lightest_gray">

    <!-- Switch bar for toggling between the different kind of
    reports a user can see -->
    <View
        android:id="@+id/switch_bar_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/switch_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/switch_bar"/>

    <View
        android:id="@+id/switch_bar_slider_view"
        android:layout_width="100dp"
        android:layout_height="@dimen/switch_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/switch_bar_slider"/>

    <!-- Buttons to toggle views between user reports, cleanups,
    and all -->
    <LinearLayout
        android:id="@+id/switch_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/switch_bar_view"
        app:layout_constraintStart_toStartOf="@id/switch_bar_view"
        app:layout_constraintEnd_toEndOf="@id/switch_bar_view"
        android:orientation="horizontal">

        <Button
            android:id="@+id/user_reports_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/user_reports_textview_text"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textAlignment="center"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/user_all_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/user_cleanups_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/user_cleanups_textview_text"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textAlignment="center"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <!-- Begin displaying reports associated with the option chosen -->
    <LinearLayout
        android:id="@+id/reports_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/switch_bar_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/vertical_spacing"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reports_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_all_reports_and_cleanups_textview_text"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/sort_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/sort_text"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_reports_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reports_title_layout"
        android:layout_marginTop="@dimen/vertical_spacing"
        tools:listitem="@layout/fragment_report" />

</androidx.constraintlayout.widget.ConstraintLayout>

