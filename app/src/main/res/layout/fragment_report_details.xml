<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_margin="@dimen/screen_margin"
    android:background="@color/lightest_gray"
    tools:context=".ui.reports.ReportDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:minHeight="600dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/screen_margin"
        android:background="@drawable/rectangle_container"
        android:elevation="@dimen/elevation"
        android:orientation="horizontal">

        <!-- First column of info -->
        <!-- Report status, description, location, distance, points, etc. -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/report_details_title_textview_text"
                android:textStyle="bold"
                android:textSize="@dimen/header_2_text_size"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/report_details_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_status_textview_text"
                    android:textStyle="bold"
                    android:textSize="@dimen/paragraph_text_size"/>

                <ImageView
                    android:layout_width="@dimen/report_status_icon_size"
                    android:layout_height="@dimen/report_status_icon_size"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/do_not_disturb_100_black"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placeholder description of a report for its report details page."
                android:textSize="@dimen/subtitle_text_size"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_details_points_available_textview_text"
                    android:textStyle="bold"
                    android:textSize="@dimen/paragraph_text_size"/>
                <TextView
                    android:id="@+id/report_details_points_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="250"
                    android:textSize="@dimen/paragraph_text_size"/>

                <ImageView
                    android:layout_width="@dimen/report_status_icon_size"
                    android:layout_height="@dimen/report_status_icon_size"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/leaf_96_green"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|left">
                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/location_96_black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200 Ring Rd, Waterloo"
                        android:textSize="@dimen/subtitle_text_size"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|end">
                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/walking_96_black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 min."
                        android:textSize="@dimen/subtitle_text_size"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Second column of info -->
        <!-- Report date, photo, etc. -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/report_details_reported_date_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reported 05/23/2023: 2:48pm"
                android:textSize="@dimen/subtitle_text_size"
                android:textAlignment="textEnd"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/rounded_square_100_green"
                android:layout_gravity="right|bottom"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See Photos"
                android:textSize="@dimen/subtitle_text_size"
                android:textAlignment="textEnd"/>


        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>