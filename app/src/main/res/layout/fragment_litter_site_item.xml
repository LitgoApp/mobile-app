<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_marginBottom="@dimen/vertical_spacing"
    android:elevation="@dimen/elevation"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/litter_site_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_container"
        android:elevation="@dimen/elevation"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Report info first column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.75"
            android:orientation="vertical">

            <!-- Report status section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="top">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_status_textview_text"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

                <ImageView
                    android:id="@+id/litter_site_status_icon_imageview"
                    android:layout_width="@dimen/report_status_icon_size"
                    android:layout_height="@dimen/report_status_icon_size"
                    android:layout_marginStart="@dimen/vertical_spacing"
                    android:src="@drawable/do_not_disturb_100_black" />
            </LinearLayout>

            <TextView
                android:id="@+id/litter_site_description_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/report_min_height"
                android:maxHeight="@dimen/report_max_height"
                android:overScrollMode="never"
                android:text="Placeholder description of the garbage reporting in question."/>

            <!-- Report location section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_spacing"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="bottom">
                <ImageView
                    android:layout_width="@dimen/report_status_icon_size"
                    android:layout_height="@dimen/report_status_icon_size"
                    android:src="@drawable/location_96_black"/>
                <TextView
                    android:id="@+id/litter_site_address_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="200 Ring Rd, Waterloo"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Report info second column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:layout_marginTop="@dimen/vertical_spacing"
            android:layout_marginStart="@dimen/vertical_spacing"
            android:orientation="vertical">

            <TextView
                android:id="@+id/litter_site_last_updated_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="July 18, 2023: 2:48pm"
                android:textSize="12dp"
                android:gravity="right"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|right">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/litter_site_report_points_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"/>

                    <ImageView
                        android:layout_width="@dimen/report_status_icon_size"
                        android:layout_height="@dimen/report_status_icon_size"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/report_96_green"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:id="@+id/litter_site_cleanup_points_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"/>

                    <ImageView
                        android:layout_width="@dimen/report_status_icon_size"
                        android:layout_height="@dimen/report_status_icon_size"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/leaf_96_green"/>
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/litter_site_photo_imageview"
                android:layout_width="@dimen/report_image_width"
                android:layout_height="@dimen/report_image_height"
                android:src="@drawable/rounded_square_100_green"
                android:layout_gravity="right"/>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

